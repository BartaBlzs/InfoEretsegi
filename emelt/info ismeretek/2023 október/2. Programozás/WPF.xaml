<Window x:Class="wpfproject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfproject"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Button Content="Kartya generalasa" 
                HorizontalAlignment="Center" 
                Margin="20" Width="200" 
                Height="30" Click="Generate"
                VerticalAlignment="Top"/>
        <WrapPanel x:Name="sp" Width="250" Margin="0 80 0 120">
        </WrapPanel>
        <TextBox Width="200" Height="30" x:Name="filename"
                 VerticalAlignment="Bottom"
                 Margin="70" Text="bingo.txt"></TextBox>
        <Button Width="200" Height="30" 
                VerticalAlignment="Bottom" 
                Margin="20" Content="Mentes"
                Click="Save"></Button>
    </Grid>
</Window>
